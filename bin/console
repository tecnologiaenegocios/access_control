#!/usr/bin/env sh

if [ -z "$RAILS_ENV" ]; then
  export RAILS_ENV="development"
fi

echo "Loading AccessControl console on '$RAILS_ENV'"
bundle exec pry -I'lib' -I'spec' -r'access_control' \
                -r'app/config/environment.rb'       \
                -r'console_app'                     \
                -c 'AccessControl' --simple-prompt $*
